<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".activities.EncontrarMentoresActivity">

    <TextView
        android:id="@+id/listarMentores"
        android:layout_width="197dp"
        android:layout_height="33dp"
        android:text="Buscar Mentores"
        android:textColor="@color/colorBackground"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/editBuscarMentor"
        android:layout_width="@dimen/_265sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="36dp"
        android:background="@color/colorBackground"
        android:drawableLeft="@drawable/buscar_black"

        android:hint="Digite uma profissÃ£o"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:textColorHint="@color/colorHintText"
        app:cornerRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listarMentores"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnBuscarMentor"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorBackground"
        android:fontFamily="@font/roboto_regular"
        android:text="Buscar"
        android:textColor="@color/colorPrimary"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editBuscarMentor"
        app:layout_constraintVertical_bias="0.064" />

    <LinearLayout
        android:id="@+id/layoutNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_52sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/home"
            app:layout_constraintBottom_toTopOf="@id/viewDivider"
            app:layout_constraintEnd_toStartOf="@id/imageVideoMeeting"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorBackground" />

        <ImageView
            android:id="@+id/imgBuscar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_52sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/busca"
            app:layout_constraintBottom_toTopOf="@id/viewDivider"
            app:layout_constraintEnd_toStartOf="@id/imageVideoMeeting"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorBackground" />

        <ImageView
            android:id="@+id/imgFeed"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_52sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/feed"
            app:layout_constraintBottom_toTopOf="@id/viewDivider"
            app:layout_constraintEnd_toStartOf="@id/imageVideoMeeting"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorBackground" />

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/perfil"
            app:layout_constraintBottom_toTopOf="@id/viewDivider"
            app:layout_constraintEnd_toStartOf="@id/imageVideoMeeting"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorBackground" />




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>